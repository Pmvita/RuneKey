# NPM Configuration for RuneKey
# Reduces peer dependency warnings and conflicts

# Auto-install peer dependencies
auto-install-peers=true

# Use legacy peer dependency resolution
legacy-peer-deps=false

# Reduce warning verbosity
loglevel=warn

# Use exact versions for stability
save-exact=true

# Faster installs
prefer-offline=true
cache-max=86400000

# Registry configuration
registry=https://registry.npmjs.org/

# Avoid peer dependency conflicts in React Native
strict-peer-deps=false